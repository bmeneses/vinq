<% provide(:title, 'Wine Listing') %>
<h1>Wine Listing</h1>



<div class="row">

	<aside class="span4">
		<section>
			<% if @filters.any? %>
			  <h4>Filters</h4>
			  	<%= link_to "Clear All Filters", wines_path %>
			<% end %>
			<h3>Appellations</h3>
			<% if @appellations.any? %>
				<ul class="category-filter">
					<% @appellations.each do |appellation| %>
					 <li>
					 		<%= link_to appellation.name, 
					 			"wines?filter=appellation&appellation=#{appellation.id.to_s}" %>
					 </li>
					<% end %>
				</ul>
			<% end %>
		</section>
		<section>
			<h3>Regions</h3>
			<% if @regions.any? %>
				<ul class="category-filter">
					<% @regions.each do |region| %>
					 <li><%= link_to region.name, "#" %></li>
					<% end %>
				</ul>
			<% end %>
		</section>
	</aside>



	<%= will_paginate %>
	<div class="span8">
		<ul	class="wines">
			<% binding.pry if @wines == nil %>
			<%= render @wines %>
		</ul>

		<%= will_paginate %>
	</div>
</div>